{
  "compilerOptions": {
    "target": "es6",
    // "incremental": true,   
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],                        
    "jsx": "react",  
    "module": "esnext",         
    "moduleResolution": "node",   
    "resolveJsonModule": true, 
    "allowJs": true, 
    "noEmit": true,      
    "isolatedModules": true,      
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true,            
    "strict": true,  
    "noUncheckedIndexedAccess": true,  
    "skipLibCheck": true        
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude":[
    "node_modules", 
    "./dist/**/*",
  ]
}
